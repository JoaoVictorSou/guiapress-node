<%- include('../../partials/head') %>
<body>
    <%- include('../../partials/navbar') %>
    <div class="container">
        <h2 class="mt-3 border-top p-1">
            Artigos
        </h2>
        <a class="btn btn-success mb-4" href="/admin/articles/new">Criar novo artigo</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Categoria</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% articles.forEach((article) => { %>
                    <tr>
                        <td>
                            <%= article.id %>
                        </td>
                        <td>
                            <%= article.title %>
                        </td>
                        <td>
                            <%= article.slug %>
                        </td>
                        <td>
                            <%= article.category.title %>
                        </td>
                        <td>
                            <a href="/admin/articles/edit/<%= article.id %> " class="btn btn-warning">Editar</a>
                            <form class="d-inline" action="/articles/delete" method="post" onsubmit="safeSubmit(event, this)">
                                <input type="hidden" value="<%= article.id %>" name="id">
                                <button class="btn btn-danger">Deletar</button>
                            </form>
                        </td>
                    </tr> 
                <% }) %> 
            </tbody>
        </table>
    </div>

    <script>
        function safeSubmit(event, deleteThis) {
            event.preventDefault()

            const continueSubmit = window.confirm('Deseja realmente deletar este item?')

            if(continueSubmit) {
                deleteThis.submit()
            } 
        }
    </script>
</body>
<%- include('../../partials/foot') %> 