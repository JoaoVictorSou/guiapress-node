<%- include('../../partials/head') %>
<body>
    <%- include('../../partials/homenavbar') %> 
    <div class="container mt-4">
        <% articles.rows.forEach((article) => { %>
            <div class="card mb-3">
                <div class="card-header">
                    <%= article.title %> 
                </div>
                <div class="card-footer">
                    <a href="/<%= article.slug %> " class="btn btn-primary">Ler artigo</a>
                </div>
            </div>
        <% }) %>
        
        <div class="row pb-4">
            <div class="col col-6 text-left">
                <% if (page > 2) { %> 
                    <a href="/articles/page/<%= page-1 %>" class="text-decoration-none text-secondary"><<< Prev</a>
                <% } else { %>
                    <a href="/" class="text-decoration-none text-secondary"><<< Prev</a>
                <% } %> 
            </div>
            <div class="col col-6 text-right">
                <% if (pageExistence) { %> 
                    <a href="/articles/page/<%= page+1 %> " class="text-decoration-none text-secondary">Next >>></a>
                <% } %> 
            </div>
        </div>
    </div>
</body>
