<%- include('../../partials/head') %>
<body>
    <%- include('../../partials/navbar') %> 
    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                <h2>Edição da categoria: <%= category.title %> </h2>
            </div>
            <div class="card-body">
                <form action="/categories/update" method="post">
                    <input class="form-control" type="text" name="title" placeholder="Novo nome da categoria" value="<%= category.title %>">
                    <input type="hidden" name="id" value="<%= category.id %> " />
                    <input type="submit" class="btn btn-success mt-3" value="Atualizar"/> 
                </form>
            </div>
        </div>
    </div>
</body>
